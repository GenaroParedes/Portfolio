                            <EmailIcon class='h-5 w-5'/>
                            Genaroparedes77@gmail.com
                        </ButtonHeader>
                        <ButtonHeader href={'https://wa.me/5493534244272'}>
                            <WhatsAppIcon class='h-5 w-5'/>
                            WhatsApp
                        </ButtonHeader>
                        <ButtonHeader href={'/cv/Genaro-Paredes_CV.pdf'}>
                            <CVIcon class='h-5 w-5'/>
                            Descargar CV
                        </ButtonHeader>
                    </nav>
                </div>
                
            </SectionContainer>
        </div>

        <!-- SOBRE MÍ -->
        <div id="about">
            <SectionContainer ancho={'lg:w-4xl'}>
                <h2 data-animate-on-scroll id="about" class="opacity-0 translate-y-20 transition-all ease-in-out duration-700 text-xl sm:text-4xl font-bold mb-6 sm:mb-8 mx-auto">Sobre mí</h2>
